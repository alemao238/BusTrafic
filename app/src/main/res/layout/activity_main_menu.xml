<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mnmistake.movilrealty.MainMenu"
    android:weightSum="1.0"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1.0">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/IBlocator"
            android:gravity="center"
            android:layout_weight="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TVproperties"
            android:layout_weight="0.3"
            android:text="Properties"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rounded_corner" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TVrealtors"
            android:layout_weight="0.3"
            android:text="Realtors"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rounded_corner"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/IBsearch"
            android:layout_weight="0.20"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/IBrealtors"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">
        <include layout="@layout/mastermenu"
        />
    </LinearLayout>
</LinearLayout>
